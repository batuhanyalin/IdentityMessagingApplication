@model RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Registration Page (v2)</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/AdminLTE-3.1.0/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/AdminLTE-3.1.0/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE-3.1.0/dist/css/adminlte.min.css">
</head>
<body class="hold-transition register-page">
    <div class="register-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a class="h1"><b>BY</b> MessageApp™</a><small>v1.1</small>
            </div>
            <div class="card-body">
                <p style="font-size:larger" class="login-box-msg">Üyelik Oluştur</p>

                <form method="post">
                    <span style="font-size:small" class="text-danger" asp-validation-for="Name"></span>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" required="" asp-for="Name" placeholder="Ad">                     
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-pen-alt"></span>
                            </div>
                        </div>
                    </div>
                    <span style="font-size:small" class="text-danger" asp-validation-for="Surname"></span>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" asp-for="Surname" required="" placeholder="Soyad">                      
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fab fa-stripe-s"></span>
                            </div>
                        </div>
                    </div>
                    <span style="font-size:small" class="text-danger" asp-validation-for="BirthDay"></span>
                    <div class="input-group mb-3">                      
                        <input type="date" class="form-control" asp-for="BirthDay" required="" placeholder="Doğum Tarihi">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-birthday-cake"></span>
                            </div>
                        </div>
                    </div>
                    <span style="font-size:small" class="text-danger" asp-validation-for="City"></span>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" asp-for="City" required="" placeholder="Şehir">                       
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-city"></span>
                            </div>
                        </div>
                    </div>
                    <span style="font-size:small" class="text-danger" asp-validation-for="Profession"></span>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" asp-for="Profession" required="" placeholder="Meslek">                       
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user-md"></span>
                            </div>
                        </div>
                    </div>
                    <span style="font-size:small" class="text-danger" asp-validation-for="Phone"></span>

                    <div class="input-group mb-3">
                        <input type="text" class="form-control" asp-for="Phone" required="" placeholder="Telefon">                    
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-phone"></span>
                            </div>
                        </div>
                    </div>
                    <span style="font-size:small" class="text-danger" asp-validation-for="UserName"></span>

                    <div class="input-group mb-3">
                        <input type="text" class="form-control" asp-for="UserName" required="" placeholder="Kullanıcı Adı">                    
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <span style="font-size:small" class="text-danger" asp-validation-for="Email"></span>
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" asp-for="Email" required="" placeholder="E-posta">
                                              <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <span style="font-size:small" class="text-danger" asp-validation-for="Password"></span>

                    <div class="input-group mb-3">
                        <input type="password" class="form-control" asp-for="Password" required="" placeholder="Şifre">                  
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input required="" type="checkbox" id="agreeTerms" name="terms" value="agree">
                                <label for="agreeTerms">
                                  <a href="#">Kullanım koşullarını</a> okudum, anladım, kabul ediyorum.
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Üye Ol</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <a href="/Login/Index" class="text-center">Üyeliğin var mı? Giriş Yap.</a>
            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>
    <!-- /.register-box -->
    <!-- jQuery -->
    <script src="~/AdminLTE-3.1.0/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminLTE-3.1.0/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminLTE-3.1.0/dist/js/adminlte.min.js"></script>
</body>
</html>
