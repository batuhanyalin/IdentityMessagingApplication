@model List<ListUserDto>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Kullanıcı Listesi</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard/Index/">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Kullanıcı Listesi</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Görsel</th>
                                    <th>Adı Soyadı</th>
                                    <th>Kullanıcı Adı</th>
                                    <th>Şehir</th>
                                    <th>Telefon</th>
                                    <th>Gönderdiği Mesaj</th>
                                    <th>Aldığı Mesaj</th>
                                    <th>Onay Durumu</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td><img src="@item.ImageUrl" style="height:70px;width:50px" /></td>
                                        <td>@item.Name @item.Surname</td>
                                        <td>@item.UserName</td>
                                        <td>@item.City</td>
                                        <td>@item.Phone</td>
                                        <td>@item.SenderMessage.Count()</td>
                                        <td>@item.ReceiverMessage.Count()</td>
                                        <td>
                                            <a href="/Admin/User/ChangeIsApprovedUser/@item.Id">
                                                @{
                                                    if (item.IsApproved == true)
                                                    {                                                  
                                                        <i style="color:mediumseagreen;font-size:20px" class="fas fa-check-circle"></i>
                                                    }
                                                    else
                                                    {
                                                        <i style="color:palevioletred;font-size:20px" class="fas fa-check-circle"></i>
                                                    }
                                                }
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/Admin/User/DeleteUser/@item.Id" class="btn btn-warning">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/Admin/User/UpdateUser/@item.Id" class="btn btn-success">Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>Görsel</th>
                                    <th>Adı Soyadı</th>
                                    <th>Kullanıcı Adı</th>
                                    <th>Şehir</th>
                                    <th>Telefon</th>
                                    <th>Gönderdiği Mesaj</th>
                                    <th>Aldığı Mesaj</th>
                                    <th>Onay Durumu</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

